{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "types": ["node"]
  },
  "include": ["./**/*.mjs", "./**/*.js"],
  "exclude": ["node_modules"]
}